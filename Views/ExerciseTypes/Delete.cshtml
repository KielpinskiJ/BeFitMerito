@model BeFit.Models.ExerciseType

@{
    ViewData["Title"] = "Usuń typ ćwiczenia";
    var usageCount = (int)(ViewBag.UsageCount ?? 0);
}

<h1>Usuń typ ćwiczenia</h1>

<h3>Czy na pewno chcesz usunąć ten typ ćwiczenia?</h3>

@if (usageCount > 0)
{
    <div class="alert alert-warning">
        <strong>Uwaga!</strong> Ten typ ćwiczenia jest używany w <strong>@usageCount</strong> ćwiczeniach użytkowników.
        Usunięcie spowoduje również usunięcie wszystkich tych ćwiczeń!
    </div>
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@(usageCount > 0 ? "Usuń mimo to" : "Usuń")" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>
