@model IEnumerable<BeFit.Models.SessionExercise>

@{
    ViewData["Title"] = "Moje ćwiczenia";
}

<h1>Moje ćwiczenia</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj nowe ćwiczenie</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Nie masz jeszcze żadnych ćwiczeń. Najpierw <a asp-controller="TrainingSessions" asp-action="Create">utwórz sesję treningową</a>, a następnie dodaj do niej ćwiczenia.
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Sesja</th>
                <th>
                    @Html.DisplayNameFor(model => model.ExerciseType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Weight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sets)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reps)
                </th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model)
    {
            <tr>
                <td>
                    @item.TrainingSession?.StartDateTime.ToString("dd.MM.yyyy HH:mm")
                </td>
                <td>
                    @item.ExerciseType?.Name
                </td>
                <td>
                    @item.Weight kg
                </td>
                <td>
                    @item.Sets
                </td>
                <td>
                    @item.Reps
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Szczegóły</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Usuń</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
}

